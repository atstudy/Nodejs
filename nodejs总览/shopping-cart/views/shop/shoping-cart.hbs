
{{# if products}}

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
          {{# each products }}
        <li class="list-group-item">
          <span class="badge">{{ this.qty }}</span>
          <strong>{{ this.item.title }}</strong>
          <span class="label label-success">{{ this.price }}</span>
          <div class="btn-group">
              <button class="brn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">编辑 <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="/reduce/{{this.item._id}}">数量减1</a></li>
                <li><a href="/removeItem/{{this.item._id}}">清空</a></li>
              </ul>
          </div>
          </li>
          {{/each}}
      </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>总计: {{ totalPrice }}</strong>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" class="btn btn-success" type="button" name="button">结算</a>
  </div>
</div>



  {{ else }}


  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>暂无</h2>
    </div>
  </div>

{{/if}}
